import javax.swing.JOptionPane;
public class TrueFalseQuestion extends Question {

	@Override
	String ask() {
		correctAnswer.toUpperCase();
		String res = JOptionPane.showInputDialog(question);
		res = res.toUpperCase();
		Repsonse(res);
	if(!checkIfValid(res)) {
		JOptionPane.showMessageDialog(null,"Invalid answer. Please enter TRUE or FALSE");
		ask();
	}else if (res.equals(correctAnswer)) {
		return correctAnswer;
		}

	return question;
	
	}
	public String Repsonse(String res) {
		if(res == "F" || res == "FALSE" || res == "N" || res == "NO") return "FALSE";
		if(res == "T" || res == "TRUE" || res == "Y" || res == "YES") return "TRUE";
		else return "Invalid";
	}
	public boolean checkIfValid(String str) {
		String[] validArray = {"F","N","NO","FALSE","TRUE","T","Y","YES"};
		for(int i = 0;i<8;i++) {
			if(str.equals(validArray[i])) {
				return true;
			}
		}
		return false;
	}
	TrueFalseQuestion(String question, String answer){
		this.question = "TRUE or FALSE: " + question;
		super.correctAnswer = answer;
	}
}
